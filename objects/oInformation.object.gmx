            <kind>1</kind>
            <string>///back key &amp;&amp; learn skills

if (visible) {
    
    //back from help(pick rune) to main menu
    if (backpressed &amp;&amp; backarea) {
        visible = false;
        with(oButtom) {
            visible = true;
        }
    }
    
    //go to begin page
    if (runepressed &amp;&amp; depth == -18 &amp;&amp; runearea) {
        visible = false;
                
        with(oButtom) {
            depth = -21;
            // begin the game at depth -21
            visible = true;
        }
        // pick the rune
        if (scr_area(128,320,32,32)) {
            global.rune = 1;
            scr_fen();
            // 1: 焚
        }
        if (scr_area(192,320,32,32)) {
            global.rune = 2;
            scr_pan();
            // 2: 磐
        }
        if (scr_area(256,320,32,32)) {
            global.rune = 3;
            scr_nu();
            // 3: 怒
        }
        
        // visible the hero stats
        oHeroStats.visible = true;

    }
    
    //learn skills
    if (skillpressed &amp;&amp; depth == -16 &amp;&amp; skillarea) {
        with(oHeroStats) {
            if (scr_area(450,100,32,32) &amp;&amp; movepoint &gt;= critchance_mp &amp;&amp; critchanceflag){
                critchance_lv += 1;
                critchance += addcritchance;
                movepoint -= critchance_mp;
                critchanceflag = false;
            }
            if (scr_area(450,175,32,32) &amp;&amp; movepoint &gt;= lifeleech_mp &amp;&amp; lifeleechflag){
                lifeleech_lv += 1;
                lifeleech += addlifeleech;
                movepoint -= lifeleech_mp;
                lifeleechflag = false;
            }
            if (scr_area(450,250,32,32) &amp;&amp; movepoint &gt;= dealperhp_mp &amp;&amp; dealperhpflag){
                dealperhp_lv += 1;
                dealperhp += adddelperhp;
                movepoint -= dealperhp_mp;
                dealperhpflag = false;
            }
            if (scr_area(450,325,32,32) &amp;&amp; movepoint &gt;= dashreduce_mp &amp;&amp; dashreduceflag){
                dashreduce_lv += 1;
                dashcost -= dashreduce;
                dashreduceeffect += dashreduce;
                movepoint -= dashreduce_mp;
                dashreduceflag = false;
            }
        }
    }
    
    
    
}
